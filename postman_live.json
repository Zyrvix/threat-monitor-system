{
  "info": {
    "name": "Threat Monitor - LIVE (Render)",
    "description": "API collection for testing on the live Render environment.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"vinayagam\",\n    \"password\": \"qwerty@123\",\n    \"email\": \"vinayagam@example.com\",\n    \"role\": \"admin\",\n    \"first_name\": \"Vinayagam\",\n    \"last_name\": \"Live\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{base_url}}/accounts/register/", "host": ["{{base_url}}"], "path": ["accounts", "register", ""] }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.access) {",
                  "    pm.environment.set(\"access_token\", jsonData.data.access);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"vinayagam\",\n    \"password\": \"qwerty@123\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{base_url}}/accounts/login/", "host": ["{{base_url}}"], "path": ["accounts", "login", ""] }
          }
        }
      ]
    },
    {
      "name": "Events",
      "item": [
        {
          "name": "Ingest",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"source_name\": \"Cloud-Firewall\",\n    \"event_type\": \"intrusion\",\n    \"severity\": \"high\",\n    \"description\": \"Live environment test attack.\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{base_url}}/events/ingest/", "host": ["{{base_url}}"], "path": ["events", "ingest", ""] }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "base_url", "value": "https://threat-monitor-system.onrender.com/api/v1", "type": "string" }
  ]
}
