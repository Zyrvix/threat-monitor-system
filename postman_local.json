{
  "info": {
    "name": "Threat Monitor - Localhost",
    "description": "API collection for testing on localhost:8000.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"vinayagam\",\n    \"password\": \"qwerty@123\",\n    \"email\": \"vinayagam@example.com\",\n    \"role\": \"admin\",\n    \"first_name\": \"Vinayagam\",\n    \"last_name\": \"Local\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{base_url}}/accounts/register/", "host": ["{{base_url}}"], "path": ["accounts", "register", ""] }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.access) {",
                  "    pm.environment.set(\"access_token\", jsonData.data.access);",
                  "    pm.environment.set(\"refresh_token\", jsonData.data.refresh);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"vinayagam\",\n    \"password\": \"qwerty@123\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{base_url}}/accounts/login/", "host": ["{{base_url}}"], "path": ["accounts", "login", ""] }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"refresh\": \"{{refresh_token}}\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{base_url}}/accounts/refresh/", "host": ["{{base_url}}"], "path": ["accounts", "refresh", ""] }
          }
        }
      ]
    },
    {
      "name": "Events",
      "item": [
        {
          "name": "Ingest Event",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"source_name\": \"Firewall-HQ\",\n    \"event_type\": \"intrusion\",\n    \"severity\": \"high\",\n    \"description\": \"Local test security event.\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{base_url}}/events/ingest/", "host": ["{{base_url}}"], "path": ["events", "ingest", ""] }
          }
        },
        {
          "name": "List Events",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}", "type": "text" }
            ],
            "url": { 
              "raw": "{{base_url}}/events/?severity=high", 
              "host": ["{{base_url}}"], 
              "path": ["events", ""],
              "query": [{ "key": "severity", "value": "high" }]
            }
          }
        }
      ]
    },
    {
      "name": "Alerts",
      "item": [
        {
          "name": "List Alerts",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}", "type": "text" }
            ],
            "url": { 
              "raw": "{{base_url}}/alerts/?status=open", 
              "host": ["{{base_url}}"], 
              "path": ["alerts", ""],
              "query": [{ "key": "status", "value": "open" }]
            }
          }
        },
        {
          "name": "Update Alert Status",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"status\": \"acknowledged\",\n    \"resolution_notes\": \"Analyst is investigating this local alert.\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{base_url}}/alerts/1/", "host": ["{{base_url}}"], "path": ["alerts", "1", ""] }
          }
        }
      ]
    },
    {
      "name": "System",
      "item": [
        {
          "name": "API Schema",
          "request": {
            "method": "GET",
            "header": [],
            "url": { "raw": "{{base_url}}/schema/", "host": ["{{base_url}}"], "path": ["schema", ""] }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://127.0.0.1:8000/api/v1", "type": "string" }
  ]
}
